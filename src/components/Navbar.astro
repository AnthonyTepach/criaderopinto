---
import { Image, Picture } from '@astrojs/image/components';
export interface Props {
	color: string;
   
}

const { color} = Astro.props;
---

<header aria-label="Site Header" class={color}>
  <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <div class="flex-1 md:flex md:items-center md:gap-12">
        <a class="block text-teal-600 dark:text-teal-300" href="/criaderopinto/">
          <span class="sr-only">Inicio</span>
          
            <img src="https://dl.dropbox.com/s/uicxyxb8qrtwqnv/logo-criaderopinto-white.svg" alt="" width="200px">
        </a>
      </div>

      <div class="md:flex md:items-center md:gap-12">
        <nav aria-label="Site Nav" class="hidden md:block">
          <ul class="flex items-center gap-6 text-sm">
            <li>
              <a
                class="text-gray-500 transition hover:text-gray-500/75 dark:text-white dark:hover:text-white/75"
                href="/criaderopinto/nosotros"
              >
                Nosotros
              </a>
            </li>

            <li>
              <a
                class="text-gray-500 transition hover:text-gray-500/75 dark:text-white dark:hover:text-white/75"
                href="/criaderopinto/razas"
              >
                Razas
              </a>
            </li>

            <li>
              <a
                class="text-gray-500 transition hover:text-gray-500/75 dark:text-white dark:hover:text-white/75"
                href="/criaderopinto/cachorros-disponibles"
              >
                Cachorros Disponibles
              </a>
            </li>

            <li>
              <a
                class="text-gray-500 transition hover:text-gray-500/75 dark:text-white dark:hover:text-white/75"
                href="/criaderopinto/galeria"
              >
                Galeria
              </a>
            </li>

            <li>
              <a
                class="text-gray-500 transition hover:text-gray-500/75 dark:text-white dark:hover:text-white/75"
                href="/criaderopinto/blog"
              >
                Blog
              </a>
            </li>

            <li>
              <a
                class="text-gray-500 transition hover:text-gray-500/75 dark:text-white dark:hover:text-white/75"
                href="/criaderopinto/contacto"
              >
                Contacto
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</header>
